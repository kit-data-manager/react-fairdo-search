{
    "compilerOptions": {
        "incremental": true,
        "target": "ES2017",
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true,
        "allowJs": true,
        "strict": false,
        "noEmit": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "baseUrl": "./",
        "skipLibCheck": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
